import logging
from typing import Dict, Any

logger = logging.getLogger(__name__)

class MarketResearch:
    def __init__(self):
        self.data_collector = DataCollector()

    async def gather_market_data(self, industry: str) -> Dict[str, Any]:
        """
        Asynchronously collects market data for a specified industry.
        
        Args:
            industry (str): The target industry.
            
        Returns:
            Dict[str, Any]: Market data including trends and customer insights.
            
        Raises:
            DataCollectionError: If data collection fails after multiple attempts.
        """
        try:
            data = await self.data_collector.collect_data(industry)
            logger.info("Market data collected successfully for %s", industry)
            return data
        except Exception as e:
            logger.error("Failed to collect market data: %s", str(e))
            raise DataCollectionError(f"Data collection failed for {industry}") from e

class DataCollector:
    async def collect_data(self, industry: str) -> Dict[str, Any]:
        """
        Simulates data collection from external sources.
        
        Args:
            industry (str): The target industry.
            
        Returns:
            Dict[str, Any]: Collected market data.
        """
        # Simulated API call
        await asyncio.sleep(1)
        return {
            "industry": industry,
            "trend": "rising",
            "customer_sentiment": "positive"
        }

class DataCollectionError(Exception):
    pass